<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="180dp"
    android:padding="20dp">

	<TextView
		android:id="@+id/person_key"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		style="@style/gray_textes" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/person_name">

        <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/first_name" />

        <TextView
            android:id="@+id/last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/first_name"
            style="@style/last_name" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="60dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/picture">

        <ImageView
            android:id="@+id/picture_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_photos_mini"
            />

        <TextView
            android:id="@+id/picture_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/picture_icon"
            style="@style/gray_textes" />

        <ImageView
            android:id="@+id/picture_status_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="160dp"
            android:layout_toRightOf="@+id/picture_text"
            android:src="@drawable/icon_status_completed"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="90dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/note">

        <ImageView
            android:id="@+id/note_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_notes_mini"
            />

        <TextView
            android:id="@+id/note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/note_icon"
            style="@style/gray_textes" />

        <ImageView
            android:id="@+id/note_status_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="160dp"
            android:layout_toRightOf="@+id/note_text"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="125dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/form">

        <ImageView
            android:id="@+id/form_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_forms_mini"
            />

        <TextView
            android:id="@+id/form_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/form_icon"
            style="@style/gray_textes" />

        <ImageView
            android:id="@+id/form_status_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="160dp"
            android:layout_toRightOf="@+id/form_text"
            />

    </LinearLayout>

</RelativeLayout>